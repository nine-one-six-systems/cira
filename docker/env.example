# CIRA Production Environment Variables
# Copy this file to .env and fill in the values
#
# Required variables are marked with [REQUIRED]
# Optional variables have default values shown

# =============================================================================
# REQUIRED - Security
# =============================================================================

# [REQUIRED] Secret key for Flask session encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# [REQUIRED] Anthropic API key for Claude AI
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (default: SQLite)
# For PostgreSQL: postgresql://user:password@host:5432/cira
# For SQLite: sqlite:///cira.db
DATABASE_URL=sqlite:///cira.db

# =============================================================================
# Redis Configuration (usually no changes needed with Docker)
# =============================================================================

# Redis URL for caching
REDIS_URL=redis://redis:6379/0

# Celery broker and backend URLs
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# =============================================================================
# Frontend Configuration
# =============================================================================

# URL where frontend is hosted (for CORS)
FRONTEND_URL=http://localhost

# API URL for frontend to use
VITE_API_URL=http://localhost:5000/api/v1

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Web Crawling Defaults
# =============================================================================

# Maximum pages to crawl per company (thorough mode)
CRAWL_DEFAULT_MAX_PAGES=100

# Maximum crawl depth (links deep from homepage)
CRAWL_DEFAULT_MAX_DEPTH=3

# Time limit in minutes per crawl
CRAWL_DEFAULT_TIME_LIMIT_MINUTES=30

# Rate limit: requests per second per domain
CRAWL_DEFAULT_RATE_LIMIT=1

# =============================================================================
# AI Analysis Configuration
# =============================================================================

# Default analysis mode: quick or thorough
ANALYSIS_DEFAULT_MODE=thorough

# Maximum API call retries
ANALYSIS_MAX_RETRIES=3

# API call timeout in seconds
ANALYSIS_TIMEOUT_SECONDS=60

# =============================================================================
# Token Pricing (per 1M tokens in USD)
# =============================================================================

# Claude input token price per million
CLAUDE_INPUT_TOKEN_PRICE=3.00

# Claude output token price per million
CLAUDE_OUTPUT_TOKEN_PRICE=15.00

# =============================================================================
# Optional: Job Recovery
# =============================================================================

# Skip automatic job recovery on startup (for debugging)
# SKIP_JOB_RECOVERY=true
